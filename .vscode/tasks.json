{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Mod",
      "type": "shell",
      "command": "./gradlew build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gradle"],
      "detail": "Build the Minecraft AI mod JAR"
    },
    {
      "label": "Run Client",
      "type": "shell",
      "command": "./gradlew runClient",
      "group": "build",
      "problemMatcher": [],
      "detail": "Run Minecraft client with mod loaded"
    },
    {
      "label": "Run Server",
      "type": "shell",
      "command": "./gradlew runServer",
      "group": "build",
      "problemMatcher": [],
      "detail": "Run Minecraft server with mod loaded"
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "./gradlew clean",
      "problemMatcher": [],
      "detail": "Clean build artifacts"
    },
    {
      "label": "Refresh Dependencies",
      "type": "shell",
      "command": "./gradlew --refresh-dependencies",
      "problemMatcher": [],
      "detail": "Force refresh all dependencies"
    }
  ]
}
